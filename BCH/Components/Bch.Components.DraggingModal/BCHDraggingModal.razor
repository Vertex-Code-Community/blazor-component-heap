@using Bch.Components.Modal

<BchModal @ref="_modalComponent"
          Width="@Width"
          Height="@Height"
          ShowOverlay="false"
          X="@($"{_pos.X.ToString(_nF)}px")"
          Y="@($"{_pos.Y.ToString(_nF)}px")"
          ZIndex="_zIndex"
          @bind-Show="Show">
    @ChildContent
</BchModal>


<style>
    #@HandleId {
        touch-action: none;
    }
</style>