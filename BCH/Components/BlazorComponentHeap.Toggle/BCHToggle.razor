<BCHSubscriptionEnabler>
    <div class="bch-toggle" id="@_toggleId">
        <input type="checkbox"
               class="toggle-button @(Disabled ? "toggle-disabled" : "")"
               style=""
               checked="@Value"
               @bind-value="@Value">
        <label for="toggle-button" class="text bch-no-selectable-text @(Disabled ? "text-disabled" : "")">@Label</label>
    </div>
</BCHSubscriptionEnabler>

<style>
    .bch-toggle#@_toggleId > .toggle-button {
        background: @(string.IsNullOrWhiteSpace(DefaultBackgroundColor) ? "#D7D7D7" : DefaultBackgroundColor);
    }

        .bch-toggle#@_toggleId > .toggle-button::after {
            background-color: @(string.IsNullOrWhiteSpace(DefaultCircleColor) ? "#FFFFFF" : DefaultCircleColor);
        }

        .bch-toggle#@_toggleId > .toggle-button:checked::after {
            background-color: @(string.IsNullOrWhiteSpace(CheckedCircleColor) ? "#fff" : CheckedCircleColor);
        }

        .bch-toggle#@_toggleId > .toggle-button:checked {
            background-color: @(string.IsNullOrWhiteSpace(CheckedBackgroundColor) ? "#33B469" : CheckedBackgroundColor);
        }
</style>