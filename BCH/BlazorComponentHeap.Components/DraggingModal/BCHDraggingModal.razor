<BCHSubscriptionEnabler ShowNotification="false">
    <BCHModal @ref="_modalComponent"
              Width="@Width"
              Height="@Height"
              ShowOverlay="false"
              X="@($"{_pos.X.ToString(_nF)}px")"
              Y="@($"{_pos.Y.ToString(_nF)}px")"
              ZIndex="_zIndex"
              @bind-Show="Show">
        @ChildContent
    </BCHModal>
</BCHSubscriptionEnabler>

<style>
    #@HandleId {
        touch-action: none;
    }
</style>