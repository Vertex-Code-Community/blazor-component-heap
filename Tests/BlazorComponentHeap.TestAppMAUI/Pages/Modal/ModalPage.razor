@page "/modal"
@using BlazorComponentHeap.Modal

<div class="page-cnt">
    
    <p onclick="history.go(-1)">Back</p>
    
    <button @onclick="OnModal1SwitchClicked">Open Modal 1</button>
    <button @onclick="OnModal2SwitchClicked">Open Modal 2</button>
</div>

<BchModal Width="20%"
          Height="20%"
          CloseOnOverlayClicked="true"
          @bind-Show="_showModal1">
    <div class="data-cnt">
        <div>Text 1</div>
        <div>Text 2</div>
        <div>Text 3</div>
    </div>
</BchModal>

<BchModal Width="20%"
          Height="20%"
          X="50px"
          Y="50px"
          @bind-Show="_showModal2">
    <div class="data-cnt">
        <div>Text 1</div>
        <div>Text 2</div>
        <div>Text 3</div>
    </div>
</BchModal>