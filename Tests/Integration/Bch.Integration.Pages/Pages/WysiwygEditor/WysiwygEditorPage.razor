@page "/wysiwyg-editor"
@using Bch.Components.Select
@using Bch.Components.WYSIWYG
@using Bch.Components.WYSIWYG.Components.Toolbar.Item

<div class="page-container">
    <div class="inner-container">
        <div class="html-editor-container">
            <div class="editor">
                <BchWysiwygEditor @ref="_htmlEditor"
                                  ToolbarKeys="_toolbarKeys"
                                  OnChange="OnChangeInEditorAsync"
                                  ViewModeChanged="OnViewModeChangedAsync"
                                  OnLoaded="OnEditorLoadedAsync"
                                  OnReplaceImageClicked="OnReplaceImageClickedAsync"
                                  OnSelectImage="OnSelectImageAsync"
                                  ImageReplacingEnabled="true">
                    <ToolbarItemsTemplate>

                        <BchEditorToolbarItem Key="doc-template">
                            <div class="doc-template-wrapper">
                                <BchSelect TItem="string"
                                           ContentHeight="200"
                                           ItemHeight="30"
                                           Height="40"
                                           Width="160"
                                           Options="@_templates"
                                           DefaultText="Select Template"
                                           Filtering="false"
                                           FilterByPredicate="x => x"
                                           Selected="@null"
                                           SelectedChanged="OnSelectTemplateAsync"/>
                            </div>
                        </BchEditorToolbarItem>
                    </ToolbarItemsTemplate>
                </BchWysiwygEditor>
            </div>
        </div>
    </div>
</div>

<style>
    html {
        height: 100%;
    }

    body {
        height: 100%;
    }

    #app {
        height: 100%;
    }
</style>