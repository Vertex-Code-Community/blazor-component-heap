@page "/tabs"
@using Bch.Components.Tabs
@using Bch.Components.Tabs.TabsDraggableContext
@using Bch.Modules.Themes.Models

<div class="tabs-page">
    <h3>Tabs Component Test</h3>
    
    <div class="test-cases">
        <div class="test-case">
            <h4>Themed Variants</h4>
            <div class="themes-row">
                <div class="theme-col">
                    <h5>Light Green</h5>
                    <BchTabsDraggableContext TItem="TabModel">
                        <BchTabs TItem="TabModel"
                                 DefaultTabText="x => x.Name"
                                 TabWidthPredicate="x => x.Width"
                                 Draggable="true"
                                 ScrollTabWidth="200"
                                 Items="_items1"
                                 Theme="BchTheme.LightGreen">
                            <ContentTemplate Context="item">
                                <div class="tab-content-wrapper">
                                    <h4>@item.Name</h4>
                                    <p>This is the content for @item.Name tab. The Light Green theme uses green accents and a fresh, nature-inspired color palette.</p>
                                </div>
                            </ContentTemplate>
                        </BchTabs>
                    </BchTabsDraggableContext>
                </div>
                <div class="theme-col">
                    <h5>Light</h5>
                    <BchTabsDraggableContext TItem="TabModel">
                        <BchTabs TItem="TabModel"
                                 DefaultTabText="x => x.Name"
                                 TabWidthPredicate="x => x.Width"
                                 Draggable="true"
                                 ScrollTabWidth="200"
                                 Items="_items2"
                                 Theme="BchTheme.Light">
                            <ContentTemplate Context="item">
                                <div class="tab-content-wrapper">
                                    <h4>@item.Name</h4>
                                    <p>This is the content for @item.Name tab. The Light theme uses neutral grays and provides a clean, professional appearance.</p>
                                </div>
                            </ContentTemplate>
                        </BchTabs>
                    </BchTabsDraggableContext>
                </div>
                <div class="theme-col">
                    <h5>Dark</h5>
                    <BchTabsDraggableContext TItem="TabModel">
                        <BchTabs TItem="TabModel"
                                 DefaultTabText="x => x.Name"
                                 TabWidthPredicate="x => x.Width"
                                 Draggable="true"
                                 ScrollTabWidth="200"
                                 Items="_items3"
                                 Theme="BchTheme.Dark">
                            <ContentTemplate Context="item">
                                <div class="tab-content-wrapper">
                                    <h4>@item.Name</h4>
                                    <p>This is the content for @item.Name tab. The Dark theme uses dark backgrounds with blue accents for a modern, sleek appearance.</p>
                                </div>
                            </ContentTemplate>
                        </BchTabs>
                    </BchTabsDraggableContext>
                </div>
            </div>
        </div>
    </div>
    
    <div class="test-cases">
        <div class="test-case">
            <h4>Test Case 1: Basic Tabs</h4>
            <p>Simple tabs with default settings (Light Green theme)</p>
            <BchTabsDraggableContext TItem="TabModel">
                <BchTabs TItem="TabModel"
                         DefaultTabText="x => x.Name"
                         TabWidthPredicate="x => x.Width"
                         Items="_items4"
                         Theme="BchTheme.LightGreen">
                    <ContentTemplate Context="item">
                        <div class="tab-content-wrapper">
                            <h4>@item.Name</h4>
                            <p>This is the content for @item.Name tab with Light Green theme settings.</p>
                        </div>
                    </ContentTemplate>
                </BchTabs>
            </BchTabsDraggableContext>
        </div>

        <div class="test-case">
            <h4>Test Case 2: Draggable Tabs</h4>
            <p>Tabs with drag and drop functionality (Light theme)</p>
            <BchTabsDraggableContext TItem="TabModel">
                <BchTabs TItem="TabModel"
                         DefaultTabText="x => x.Name"
                         TabWidthPredicate="x => x.Width"
                         Draggable="true"
                         Items="_items5"
                         Theme="BchTheme.Light">
                    <ContentTemplate Context="item">
                        <div class="tab-content-wrapper">
                            <h4>@item.Name</h4>
                            <p>This is the content for @item.Name tab with Light theme and drag and drop functionality.</p>
                        </div>
                    </ContentTemplate>
                </BchTabs>
            </BchTabsDraggableContext>
        </div>

        <div class="test-case">
            <h4>Test Case 3: Tabs with Close Buttons</h4>
            <p>Tabs with close buttons enabled (Dark theme)</p>
            <BchTabsDraggableContext TItem="TabModel">
                <BchTabs TItem="TabModel"
                         DefaultTabText="x => x.Name"
                         TabWidthPredicate="x => x.Width"
                         ShowCloseOnDefaultTab="true"
                         Items="_items6"
                         Theme="BchTheme.Dark">
                    <ContentTemplate Context="item">
                        <div class="tab-content-wrapper">
                            <h4>@item.Name</h4>
                            <p>This is the content for @item.Name tab with Dark theme and close buttons enabled.</p>
                        </div>
                    </ContentTemplate>
                </BchTabs>
            </BchTabsDraggableContext>
        </div>
    </div>
</div>

<style>
    html {
        height: 100%;
    }

    body {
        height: 100%;
    }

    #app {
        height: 100%;
    }
</style>