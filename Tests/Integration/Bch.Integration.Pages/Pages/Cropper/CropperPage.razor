@page "/cropper"
@using Bch.Components.Cropper
@using Bch.Components.Cropper.Models
@using Bch.Components.Zoom.Models

@* Base64Image="_content/BlazorComponentHeap.Components/img/cropper/an225_mriya.jpg" *@

<div class="page-cnt">
    <div class="cropper-wrapper">
        <BchCropper @ref="_bchCropper"
                    BackgroundColor="green"
                    ScaleOnMouseWheel="true"
                    CropperType="CropperType.MovableRectangle"
                    CroppedWidth="200"
                    Base64Image="_content/Bch.Integration.Pages/img/slider-test-image.svg"
                    Ratio="@(16.0f / 9.0f)"
                    ViewMode="ViewMode.Default"
                    MinRectangleWidth="100"
                    MinRectangleHeight="100"/>
    </div>

    <button @onclick="OnGetResultAsync">Get Result</button>

    <div class="example-cropped-image">
        @if (!string.IsNullOrWhiteSpace(_resultImage))
        {
            <img src="@_resultImage" alt=""/>
        }
    </div>
</div>

<style>
    html {
        height: 100%;
    }

    body {
        height: 100%;
    }

    #app {
        height: 100%;
    }
    
    .example-cropped-image {
        width: 200px; 
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>