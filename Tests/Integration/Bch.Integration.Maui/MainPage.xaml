<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Bch.Integration.Maui"
             xmlns:components="clr-namespace:Bch.Integration.Maui.Components"
             xmlns:common="clr-namespace:Bch.Components.Modal;assembly=Bch.Components.Modal"
             xmlns:root="clr-namespace:Bch.Components.Modal.Root;assembly=Bch.Components.Modal"
             x:Class="Bch.Integration.Maui.MainPage">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            <RootComponent Selector="#bch-modal" ComponentType="{x:Type root:BchRootModal}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
